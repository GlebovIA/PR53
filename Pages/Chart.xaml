<Page x:Class="PR53.Pages.Chart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR53.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="420" d:DesignWidth="793.6"
      Title="Chart" SizeChanged="Page_SizeChanged" >

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/PR53;component/Images/icon.png"/>
        </Grid.Background>
        <ScrollViewer x:Name="scroll" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
            <Canvas x:Name="canvas" Margin="10" HorizontalAlignment="Left"/>
        </ScrollViewer>
        <Grid Width="200" Height="100" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10, 0, 0, 10" Background="#7fffffff">
            <Label x:Name="current_Value" Content="Тек. знач: " Margin="10, 10, 10, 0" VerticalAlignment="Top"/>
            <Label x:Name="average_Value" Content="Сред. знач: " Margin="10, 36, 10, 0" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Page>
